{
    "version": "0.2.0",
    "configurations": [{
        "type": "node",
        "request": "launch",
        "runtimeArgs": ["-r", "esm", "--harmony"],
        "name": "Debug current file",
        "skipFiles": [
            "${workspaceFolder}/node_modules/**/*.js",
            "${workspaceFolder}/lib/**/*.js"
        ],
        "program": "${file}"
    }]
}